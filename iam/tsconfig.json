{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "../node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
